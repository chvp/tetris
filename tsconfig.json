    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "rootDir": "src",
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "es2018",
      "dom",
      "esnext.asynciterable",
    ],
  },
  "include": [
    "./src/**/*",
